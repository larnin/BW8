/* CONTAINERS */

.bsm-node__extension-container
{
	background-color: var(--bsm-colors-window-dark-grey-1);
	padding: var(--bsm-metrics-window-pixels-8);
}

.bsm-node__main-container
{
	background-color: var(--bsm-colors-window-dark-grey-1);
}

.bsm-node__custom-data-container
{
	background-color: var(--bsm-colors-window-dark-grey-3);
	border-radius: var(--bsm-metrics-window-pixels-4);
	padding: var(--bsm-metrics-window-pixels-8);
}

/* INPUTS */

.bsm-node__text-field > .unity-text-field__input
{
	background-color: var(--bsm-colors-window-dark-grey-1);
	border-color: var(--bsm-colors-window-dark-grey-6);
	border-radius: var(--bsm-metrics-window-pixels-4);
	max-width: var(--bsm-metrics-window-pixels-240);
	min-width: var(--bsm-metrics-window-pixels-80);
	padding: var(--bsm-metrics-window-pixels-8);
	white-space: normal;
}

.bsm-node__text-field__hidden > .unity-text-field__input
{
	background-color: transparent;
	border-color: transparent;
}

.bsm-node__text-field__hidden > .unity-text-field__input:focus
{
	background-color: var(--bsm-colors-window-dark-grey-1);
	border-color: var(--bsm-colors-window-dark-grey-6);
}

.bsm-node__filename-text-field > .unity-text-field__input
{
	max-width: var(--bsm-metrics-window-pixels-1000);
	margin: var(--bsm-metrics-window-pixels-4);
	padding: var(--bsm-metrics-window-pixels-4);
}

.bsm-node__choice-text-field > .unity-text-field__input
{
	font-size: var(--bsm-metrics-window-pixels-11);
	height: var(--bsm-metrics-window-pixels-35);
	max-width: var(--bsm-metrics-window-pixels-1000);
	min-width: var(--bsm-metrics-window-pixels-0);
}

.bsm-node__choice-text-field > .unity-text-field__input:focus
{
	height: var(--bsm-metrics-window-pixels-25);
	margin: var(--bsm-metrics-window-pixels-4);
	padding: var(--bsm-metrics-window-pixels-4);
}

.bsm-node__quote-text-field > .unity-text-field__input
{
	background-color: var(--bsm-colors-window-dark-grey-4);
	border-color: transparent;
	border-left-color: var(--bsm-colors-window-dark-grey-6);
	border-left-width: var(--bsm-metrics-window-pixels-4);
	padding: var(--bsm-metrics-window-pixels-16);
	max-width: var(--bsm-metrics-window-pixels-600);
}

.bsm-node__quote-text-field > .unity-text-field__input:hover
{
	background-color: var(--bsm-colors-window-dark-grey-5);
}

.bsm-node__quote-text-field > .unity-text-field__input:focus
{
	background-color: var(--bsm-colors-window-dark-grey-1);
	border-color: var(--bsm-colors-window-dark-grey-6);
}

/* BUTTONS */

.bsm-node__button
{
	background-color: var(--bsm-colors-window-dark-grey-5);
	border-color: var(--bsm-colors-window-dark-grey-1);
	margin: var(--bsm-metrics-window-pixels-4);
	max-height: var(--bsm-metrics-window-pixels-25);
}

.bsm-node__button:hover
{
	background-color: var(--bsm-colors-window-dark-grey-2);
}

.bsm-node__button:active
{
	background-color: var(--bsm-colors-window-dark-grey-3);
	color: var(--bsm-colors-window-yellow);
}

/* ELEMENTS */

TextField
{
	margin-left: var(--bsm-metrics-window-pixels-0);
}

.bsm-node__custom-data-container > Foldout
{
	margin-left: var(--bsm-metrics-window-pixels-n4);
	margin-top: var(--bsm-metrics-window-pixels-4);
}

.bsm-node__custom-data-container > Foldout > TextField
{
	margin-left: var(--bsm-metrics-window-pixels-n12);
	margin-top: var(--bsm-metrics-window-pixels-8);
}

/* BUILT IN */

.unity-toggle__text
{
	margin-left: var(--bsm-metrics-window-pixels-2);
}